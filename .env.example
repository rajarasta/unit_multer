VITE_GOOGLE_AI_API_KEY=
VITE_LM_STUDIO_URL=http://localhost:1234
VITE_OPENWEBUI_URL=http://localhost:8080

# OpenAI keys for local dev (do not commit real keys)
VITE_OPENAI_API_KEY=
OPENAI_API_KEY=

# Server ports
PORT=3000
NODE_ENV=development

# Voice/LLM models
VITE_VOICE_LANGUAGE=hr-HR
VITE_REALTIME_MODEL=gpt-realtime-preview
VITE_RESPONSES_MODEL=gpt-4o-mini

# PDF Agent (Python) config
# Choose backend: 'openai_compat' (llama.cpp/LM Studio) or 'hf' (Transformers)
LLM_BACKEND=openai_compat
# Agent decision policy: 'llm_tools' (uses tool-calls) or 'rule_based' (deterministic)
AGENT_POLICY=llm_tools
# Hugging Face model settings (used when LLM_BACKEND=hf)
# For multimodal (image+text):
HF_MODEL_ID=Qwen/Qwen2-VL-7B-Instruct
# For text-only alternative:
# HF_MODEL_ID=google/gemma-2-9b-it
# HF_DTYPE options: bfloat16 | float16 | float32
HF_DTYPE=float16
# Set 1 to enable 4-bit quantization (requires bitsandbytes)
HF_LOAD_IN_4BIT=0
# PDF page processing default
MAX_PAGES_DEF=3
